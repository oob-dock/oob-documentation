{
    "$schema": "https://json-schema.org/draft/2019-09/schema",
    "title": "Non-Selectable Resource Discovery Response",
    "type": "object",
    "properties": {
        "resources": {
            "description": "Lista de recursos relacionados ao discovery",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "resourceLegacyId": {
                        "description": "Array de chave e valor com a chave de identificação do recurso no sistema de origem (legado), permitindo chaves compostas",
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "key": {
                                    "description": "Nome do campo do identificador no sistema de origem",
                                    "type": "string"
                                },
                                "value": {
                                    "description": "Valor do campo do identificador no sistema de origem",
                                    "type": "string"
                                }
                            },
                            "required": [
                                "key"
                            ],
                            "additionalItems": false
                        }
                    },
                    "validUntil": {
                        "description": "Indica se o recurso deve estar selecionado por padrão na tela de consentimento. Valor padrão: false",
                        "type": "string",
                        "format": "date"
                    },
                    "status": {
                        "description": "Indica o status atual do recurso",
                        "type": "string",
                        "default": "AVAILABLE",
                        "enum": [
                            "AVAILABLE",
                            "RESOURCE_PENDING_AUTHORISATION",
                            "RESOURCE_UNAVAILABLE",
                            "RESOURCE_TEMPORARILY_UNAVAILABLE"
                        ]
                    },
                    "submodality": {
                        "description": "Indica a submodalidade ao qual o recurso pertence",
                        "type": "object",
                        "properties": {
                            "id": {
                                "$ref": "../common-schema.json#/$defs/Guid"
                            },
                            "modality": {
                                "description": "Tipo da modalidade ao qual a submodalidade pertence",
                                "type": "string",
                                "enum": [
                                    "LOAN",
                                    "FINANCING",
                                    "UNARRANGED_ACCOUNT_OVERDRAFT",
                                    "INVOICE_FINANCING"
                                ],
                                "examples": [
                                    "LOAN"
                                ]
                            },
                            "description": {
                                "description": "Descrição da submodalidade selecionada",
                                "type": "string",
                                "examples": [
                                    "Crédito pessoal - consignado"
                                ]
                            }
                        },
                        "required": [
                            "id",
                            "modality",
                            "description"
                        ],
                        "additionalItems": false
                    }
                },
                "required": [
                    "resourceLegacyId",
                    "submodality"
                ],
                "additionalItems": false
            }
        }
    },
    "required": [
        "resources"
    ],
    "additionalItems": false
}