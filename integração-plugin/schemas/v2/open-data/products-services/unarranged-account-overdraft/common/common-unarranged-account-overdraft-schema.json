{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$defs": {
        "ResponsePersonalUnarrangedAccountOverdraft": {
            "type": "object",
            "required": [
                "brand"
            ],
            "properties": {
                "brand": {
                    "$ref": "#/$defs/PersonalUnarrangedAccountOverdraftBrand"
                }
            },
            "additionalProperties": false
        },
        "PersonalUnarrangedAccountOverdraftBrand": {
            "type": "object",
            "required": [
                "name",
                "companies"
            ],
            "properties": {
                "name": {
                    "$ref": "../../../common/common-schema.json#/$defs/Name",
                    "description": "Nome da Marca reportada pelo participante do Open Banking. O conceito a que se refere a 'marca' é em essência uma promessa da empresa em fornecer uma série específica de atributos, benefícios e serviços uniformes aos clientes."
                },
                "companies": {
                    "$ref": "#/$defs/PersonalUnarrangedAccountOverdraftCompany"
                }
            },
            "additionalProperties": false
        },
        "PersonalUnarrangedAccountOverdraftCompany": {
            "type": "array",
            "minItems": 1,
            "description": "Companies traz uma lista de todas as instituições da Marca.",
            "additionalItems": false,
            "items": {
                "anyOf": [
                    {
                        "type": "object",
                        "required": [
                            "name",
                            "cnpjNumber",
                            "personalUnarrangedAccountOverdraft"
                        ],
                        "properties": {
                            "name": {
                                "$ref": "../../../common/common-schema.json#/$defs/Name",
                                "description": "Nome da Instituição, pertencente à marca, responsável pela comercialização dos produtos e serviços."
                            },
                            "cnpjNumber": {
                                "$ref": "../../../common/common-schema.json#/$defs/CnpjNumber"
                            },
                            "urlComplementaryList": {
                                "$ref": "../../../common/common-schema.json#/$defs/urlComplementaryList"
                            },
                            "personalUnarrangedAccountOverdraft": {
                                "$ref": "#/$defs/PersonalUnarrangedAccountOverdraft"
                            }
                        },
                        "additionalProperties": false
                    }
                ]
            }
        },
        "PersonalUnarrangedAccountOverdraft": {
            "type": "array",
            "minItems": 1,
            "maxItems": 5,
            "description": "Lista de produtos e serviços referente adiantamento a depositante.",
            "additionalItems": false,
            "items": {
                "anyOf": [
                    {
                        "type": "object",
                        "required": [
                            "fees",
                            "interestRates",
                            "termsConditions"
                        ],
                        "properties": {
                            "fees": {
                                "$ref": "#/$defs/PersonalUnarrangedAccountOverdraftFee"
                            },
                            "interestRates": {
                                "$ref": "../../../common/common-schema.json#/$defs/InterestRate"
                            },
                            "termsConditions": {
                                "$ref": "../../../common/common-schema.json#/$defs/TermsConditions",
                                "description": "Campo aberto para informar as condições contratuais relativas à Modalidade de Adiantamento a depositante para pessoa natural. Pode ser informada a URL referente ao endereço onde constam as condições informadas. Endereço eletrônico de acesso ao canal."
                            }
                        },
                        "additionalProperties": false
                    }
                ]
            }
        },
        "PersonalUnarrangedAccountOverdraftFee": {
            "type": "object",
            "minItems": 1,
            "required": [
                "priorityServices"
            ],
            "properties": {
                "priorityServices": {
                    "$ref": "#/$defs/UnarrangedAccountOverdraftService"
                }
            },
            "additionalProperties": false
        },
        "ResponseBusinessUnarrangedAccountOverdraft": {
            "type": "object",
            "required": [
                "brand"
            ],
            "properties": {
                "brand": {
                    "$ref": "#/$defs/BusinessUnarrangedAccountOverdraftBrand"
                }
            },
            "additionalProperties": false
        },
        "BusinessUnarrangedAccountOverdraftBrand": {
            "type": "object",
            "required": [
                "name",
                "companies"
            ],
            "properties": {
                "name": {
                    "$ref": "../../../common/common-schema.json#/$defs/Name",
                    "description": "Nome da Marca reportada pelo participante do Open Banking. O conceito a que se refere a 'marca' é em essência uma promessa da empresa em fornecer uma série específica de atributos, benefícios e serviços uniformes aos clientes."
                },
                "companies": {
                    "$ref": "#/$defs/BusinessUnarrangedAccountOverdraftCompany"
                }
            },
            "additionalProperties": false
        },
        "BusinessUnarrangedAccountOverdraftCompany": {
            "type": "array",
            "minItems": 1,
            "description": "Companies traz uma lista de todas as instituições da Marca.",
            "additionalItems": false,
            "items": {
                "anyOf": [
                    {
                        "type": "object",
                        "required": [
                            "name",
                            "cnpjNumber",
                            "businessUnarrangedAccountOverdraft"
                        ],
                        "properties": {
                            "name": {
                                "$ref": "../../../common/common-schema.json#/$defs/Name",
                                "description": "Nome da Instituição, pertencente à marca, responsável pela comercialização dos produtos e serviços."
                            },
                            "cnpjNumber": {
                                "$ref": "../../../common/common-schema.json#/$defs/CnpjNumber"
                            },
                            "urlComplementaryList": {
                                "$ref": "../../../common/common-schema.json#/$defs/urlComplementaryList"
                            },
                            "businessUnarrangedAccountOverdraft": {
                                "$ref": "#/$defs/BusinessUnarrangedAccountOverdraft"
                            }
                        },
                        "additionalProperties": false
                    }
                ]
            }
        },
        "BusinessUnarrangedAccountOverdraft": {
            "type": "array",
            "minItems": 1,
            "maxItems": 5,
            "description": "Lista de produtos e serviços referente adiantamento a depositante.",
            "additionalItems": false,
            "items": {
                "anyOf": [
                    {
                        "type": "object",
                        "required": [
                            "fees",
                            "interestRates",
                            "termsConditions"
                        ],
                        "properties": {
                            "fees": {
                                "$ref": "#/$defs/BusinessUnarrangedAccountOverdraftFee"
                            },
                            "interestRates": {
                                "$ref": "../../../common/common-schema.json#/$defs/InterestRate"
                            },
                            "termsConditions": {
                                "$ref": "../../../common/common-schema.json#/$defs/TermsConditions",
                                "description": "Campo aberto para informar as condições contratuais relativas à Modalidade de Adiantamento a depositante para pessoa natural. Pode ser informada a URL referente ao endereço onde constam as condições informadas. Endereço eletrônico de acesso ao canal."
                            }
                        },
                        "additionalProperties": false
                    }
                ]
            }
        },
        "BusinessUnarrangedAccountOverdraftFee": {
            "type": "object",
            "minItems": 1,
            "required": [
                "priorityServices"
            ],
            "properties": {
                "priorityServices": {
                    "$ref": "#/$defs/UnarrangedAccountOverdraftService"
                }
            },
            "additionalProperties": false
        },
        "UnarrangedAccountOverdraftService": {
            "type": "array",
            "minItems": 1,
            "description": "Lista das Tarifas cobradas sobre Serviços.",
            "additionalItems": false,
            "items": {
                "anyOf": [
                    {
                        "type": "object",
                        "required": [
                            "name",
                            "code",
                            "chargingTriggerInfo",
                            "prices",
                            "minimum",
                            "maximum"
                        ],
                        "properties": {
                            "name": {
                                "type": "string",
                                "default": "CONCESSAO_ADIANTAMENTO_DEPOSITANTE",
                                "description": "Nome da Tarifa cobrada sobre Serviço que incide sobre Adiantamento a depositante, para pessoa jurídica..",
                                "Enum": [ 
                                    "CONCESSAO_ADIANTAMENTO_DEPOSITANTE" 
                                ]
                            },
                            "code": {
                                "type": "string",
                                "default": "ADIANT_DEPOSITANTE",
                                "description": "Sigla de identificação do serviço relacionado à Modalidade de Adiantamento a depositante, para pessoa jurídica.",
                                "Enum": [ 
                                    "ADIANT_DEPOSITANTE" 
                                ]
                            },
                            "chargingTriggerInfo": {
                                "$ref": "../../../common/common-schema.json#/$defs/ChargingTriggerInfo",
                                "description": "Fato gerador de cobrança que incide sobre a Modalidade de Adiantamento a depositante informada, para pessoa jurídica."
                            },
                            "prices": {
                                "$ref": "../../../common/common-schema.json#/$defs/Price"
                            },
                            "minimum": {
                                "$ref": "../../../common/common-schema.json#/$defs/MinimumPrice"
                            },
                            "maximum": {
                                "$ref": "../../../common/common-schema.json#/$defs/MaximumPrice"
                            }
                        },
                        "additionalProperties": false
                    }
                ]
            }
        }
    }
}