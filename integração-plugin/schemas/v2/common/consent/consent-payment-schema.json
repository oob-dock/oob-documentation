{
    "$schema": "http://json-schema.org/schema",
    "$defs": {
        "ConsentPayment": {
            "description": "Consentimento de pagamento",
            "type": "object",
            "required": [
                "brandId",
                "creationDateTime",
                "tpp",
                "externalId",
                "loggedUser",
                "expirationDateTime",
                "creditor",
                "payment"
